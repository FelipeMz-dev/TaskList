<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/surfie_green"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-5dp"
                android:checked="true"
                android:textSize="20sp"
                app:buttonTint="@color/white" />

            <TextView
                android:id="@+id/tvTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:maxHeight="100dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="The first task" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:drawableStart="@drawable/round_warning_24"
                android:drawablePadding="1dp"
                android:drawableTint="@color/wheat"
                android:gravity="start|center_vertical"
                android:letterSpacing="0.2"
                android:text="@string/str_today"
                android:textColor="@color/wheat"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.6"
                android:drawableEnd="@drawable/round_notifications_24"
                android:drawablePadding="2dp"
                android:gravity="end|center_vertical"
                android:letterSpacing="0.1"
                android:textColor="@color/white"
                android:textStyle="italic"
                tools:text="26/08/2023 - 12:00 a. m." />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>