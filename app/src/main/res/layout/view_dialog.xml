        android:layout_marginHorizontal="14dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="14dp"
        tools:text="Text short to dialog view"
        app:drawableEndCompat="@drawable/baseline_check_circle_24" />

</FrameLayout>